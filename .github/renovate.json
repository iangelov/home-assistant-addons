{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^tailscale/build.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "TAILSCALE_VERSION:\\s+\"(?<currentValue>\\S+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "tailscale/tailscale"
    },
    {
      "fileMatch": ["^tailscale/config.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "version:\\s+\"(?<currentValue>\\S+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "tailscale/tailscale"
    },
    {
      "fileMatch": ["^tailscale/build.yaml$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "\\s+(?:aarch64|amd64):\\s+ghcr\\.io/hassio-addons/base/(?:aarch64|amd64):(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/hassio-addons/base",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["github-releases"],
      "matchDepNames": ["tailscale/tailscale"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["ghcr.io/hassio-addons/base"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
